@model CareSync.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container mt-4">
    <h2>Confirm Delete</h2> <p>Are you sure you want to delete this appointment?</p>

    <dl class="row">
        <dt class="col-sm-2">Patient ID</dt>
        <dd class="col-sm-10">@Model.PatientID</dd>

        <dt class="col-sm-2">Doctor ID</dt>
        <dd class="col-sm-10">@Model.DoctorID</dd>
    </dl>

    <form asp-action="Delete" asp-controller="Appointment" method="post">
        <input type="hidden" asp-for="AppointmentID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>